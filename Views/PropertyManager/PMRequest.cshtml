<script>
            // script.js
    document.querySelectorAll('button').forEach(button => {
        button.addEventListener('click', function () {
            const row = this.closest('tr');
            const tenantName = row.cells[0].textContent;
            const unit = row.cells[1].textContent;
            const issue = row.cells[3].textContent;
            const assignedStaff = row.querySelector('select').value;
            const status = row.querySelectorAll('select')[1].value;

            alert(`Request from ${tenantName} for ${unit}:\nIssue: ${issue}\nAssigned to: ${assignedStaff}\nStatus: ${status}`);

            // In a real application, you could send this information to the backend or update the database.
        });
    });

</script>
