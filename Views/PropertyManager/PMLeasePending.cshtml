<script>
    function printDocument() {
        window.print();
    }

    document.addEventListener("DOMContentLoaded", function () {
        const sidebar = document.getElementById("sidebar");
        const hamburger = document.getElementById("hamburger");
        const mainContent = document.querySelector(".main-content");

        hamburger.addEventListener("click", function () {
            sidebar.classList.toggle("hidden");

            if (sidebar.classList.contains("hidden")) {
                mainContent.style.marginLeft = "0";
            } else {
                mainContent.style.marginLeft = "250px";
            }
        });

        // Add event listeners to the view buttons
        const viewButtons = document.querySelectorAll(".view-button");
        viewButtons.forEach(button => {
            button.addEventListener("click", printDocument);
        });

        // Add event listener to the add lease button
        const addLeaseButton = document.querySelector(".add-lease-button");
        const tableBody = document.querySelector(".table tbody");

        addLeaseButton.addEventListener("click", function () {
            const newRow = document.createElement("tr");

            newRow.innerHTML = `
                <td>3</td>
                <td>New Tenant</td>
                <td>789 Pine St</td>
                <td>03/01/2023</td>
                <td>02/28/2024</td>
                <td>$1300</td>
                <td>
                    <button class="view-button" onclick="printDocument()">View Lease Document</button>
                    <button class="delete-button">Delete</button>
                </td>
            `;

            tableBody.appendChild(newRow);

            // Add event listener to the new delete button
            newRow.querySelector(".delete-button").addEventListener("click", function () {
                newRow.remove();
            });
        });

        // Add event listeners to existing delete buttons
        const deleteButtons = document.querySelectorAll(".delete-button");
        deleteButtons.forEach(button => {
            button.addEventListener("click", function () {
                button.closest("tr").remove();
            });
        });
    });
</script>
