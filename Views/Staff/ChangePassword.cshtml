@model PMS.Models.User
@{
    ViewData["Title"] = "Cozy Homes - Staff Change Password";
    Layout = "~/Views/Shared/_LayoutStaff.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cozy Homes: Change Password</title>
    <!-- Font Awesome (for the arrow icon) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.0/css/all.min.css" rel="stylesheet">

    <!-- Boxicons (for the password toggle icons) -->
    <link href="https://cdn.jsdelivr.net/npm/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet">
    <!-- Include Font Awesome for Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.0/css/all.min.css" rel="stylesheet">
    <style>
        import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
        /* General reset */
        body, ul {
            margin: 0;
            padding: 0;
            font-family: "Poppins", sans-serif;
            /* display: flex;
                    justify-content: center;
                    align-items: center;
                    min-height: 100vh; */
            background-color: #e7e1d3;
        }

        .change-pass {
            padding: 40px 10px;
            background-color: #e7e1d3;
        }

        .password-container {
            background-color: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
            text-align: center;
            margin: 20px auto;
            padding: 20px;
        }

        h1 {
            color: #333;
            margin-bottom: 20px;
            font-family: Poppins, sans-serif;
            font-size: 1.8rem;
        }

        label {
            text-align: left;
            display: block;
            margin-bottom: 5px;
            font-weight: 500;
            font-size: 1.1rem;
            color: #555;
        }

        .input-wrapper {
            position: relative;
            display: flex;
            align-items: center;
            width: 100%;
        }

        .toggle-password {
            cursor: pointer;
            color: #888;
            font-size: 1.2rem;
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
        }

        input[type="password"], input[type="text"] {
            width: 100%;
            padding: 12px 40px 12px 12px; /* Leave space for the icon */
            margin: 10px 0;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1rem;
        }

        .change-btn {
            width: 70%;
            padding: 10px;
            border: none;
            background-color: #B0836E;
            color: white;
            cursor: pointer;
            border-radius: 5px;
            font-size: 1rem;
            margin-top: 15px;
            margin-left: auto;
            margin-right: auto; /* Centers the button */
            font-family: 'Poppins';

        }

            .change-btn:hover {
                background-color: #A06A5C;
            }

        .password-form {
            position: relative;
            margin-bottom: 15px;
        }

        input[type="password"]:focus,
        input[type="text"]:focus {
            border-color: #B0836E;
            box-shadow: 0 0 5px rgba(176, 131, 110, 0.5);
        }

        .cancel-password {
            margin-left: 0px;
            /* margin-left: 20px; */
            width: 100%;
            max-width: 800px;
            /* text-align: center; /* Align the button to the left */ 
            text-decoration: none;
            font-size: 20px;
            font-weight: bold;
            display: inline-flex;
            align-items: center;
            color: #B0836E;
            border: none;
            border-radius: 5px;
            justify-content: center;
            
        }

            .cancel-password a {
                margin-left: 0; /* Reset the margin if needed */
                width: 13%;
                max-width: 800px;
                text-align: center; /* Align the button to the left */
                text-decoration: none;
                font-size: 20px;
                font-weight: bold;
                display: inline-flex;
                align-items: center;
                color: #B0836E;
                border: none;
                border-radius: 5px;
                justify-content: center;
            }

                .cancel-password a:hover {
                    color: #7d5847;
                }

            .cancel-password:hover {
                color: #7d5847;
            }

            .cancel-password i {
                color: #B0836E;
                font-size: 30px;
                margin-right: 5px; /* Space between the arrow and text */
            }
    </style>
</head>
<body>
    <section class="change-pass">
      

        <div class="password-container">
            <div class="cancel-password" style="display: flex; align-items: center; margin-left: 0px; ">

                <a href="javascript:history.back()" class="text-decoration-none" style="margin-left: 0px;" title="Go Back">
                    <i class="fa-solid fa-arrow-left fs-3 text-light" style="color: #B0836E"></i>
                </a><h1 style="margin-left: 15px;">Change Password</h1>

            </div>
            @* @TempData["ErrorMessage"] *@

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form asp-action="ChangePassword" method="post">
                <!-- Current Password -->
                <div class="password-form">
                    <label for="CurrentPassword">Current Password</label>
                    <div class="input-wrapper">
                        <input type="password" id="CurrentPassword" name="CurrentPassword" placeholder="Enter current password" required>
                        <span class="toggle-password" onclick="togglePasswordVisibility('CurrentPassword', this)">
                            <i class="fa-regular fa-eye-slash"></i>
                        </span>
                    </div>
                </div>

                <!-- New Password -->
                <div class="password-form">
                    <label for="NewPassword">New Password</label>
                    <div class="input-wrapper">
                        <input type="password" id="NewPassword" name="NewPassword" placeholder="Enter new password" required>
                        <span class="toggle-password" onclick="togglePasswordVisibility('NewPassword', this)">
                            <i class="fa-regular fa-eye-slash"></i>
                        </span>
                    </div>
                </div>

                <!-- Confirm New Password -->
                <div class="password-form">
                    <label for="ConfirmPassword">Confirm New Password</label>
                    <div class="input-wrapper">
                        <input type="password" id="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm new password" required>
                        <span class="toggle-password" onclick="togglePasswordVisibility('ConfirmPassword', this)">
                            <i class="fa-regular fa-eye-slash"></i>
                        </span>
                    </div>
                </div>
                <div class="password-form" style="text-align: center; justify-content:center; align-items: center">
                    <div class="input-wrapper">
                        <button class="change-btn" type="submit" onclick="return confirmChangePassword()">Change Password</button>
            </div>    
            </div>
            </form>
        </div>
    </section>

    <!-- Toggle Password Visibility Script -->
    <script>
        function togglePasswordVisibility(fieldId, toggleIcon) {
            const passwordField = document.getElementById(fieldId);
            const icon = toggleIcon.querySelector("i");
            if (passwordField.type === "password") {
                passwordField.type = "text";
                icon.classList.remove("fa-eye-slash");
                icon.classList.add("fa-eye");
            } else {
                passwordField.type = "password";
                icon.classList.remove("fa-eye");
                icon.classList.add("fa-eye-slash");
            }
        }

             function confirmChangePassword() {
            // Show a confirmation dialog
            const userConfirmed = confirm("Are you sure you want to change your password? This action cannot be undone.");

            // Return true to proceed with the form submission, or false to cancel
            return userConfirmed;
        }
    </script>
</body>
</html>
