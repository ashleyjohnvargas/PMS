<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cozy Homes - Lease</title>
    <meta name="theme-color" content="#000000" />
    <!-- Font Awesome CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
    <link rel="stylesheet" href="~/css/atenant.css" asp-append-version="true">

    <!-- Add SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.0/dist/sweetalert2.all.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>


</head>
<body>
    <!-- Top Header -->
    <div class="atop-header">
    </div>

    <!-- Main Header -->
    <header>
        <div class="atmain-header">
            <!-- Logo -->
            <div class="logo">
                <img src="~/images/cozy-logo.png" alt="logo" style="height: 20px; width: 50px;">
                <h1>Cozy Homes</h1>
            </div>

            <!-- Navigation -->
            <nav>
                <ul>
                    <li><a asp-controller="ATenant" asp-action="ATenantHome">Home</a></li>
                    <li><a asp-controller="ATenant" asp-action="ATenantUnits">Units</a></li>
                    <li><a asp-controller="ATenant" asp-action="ATenantLease">Lease</a></li>
                    <li><a asp-controller="ATenant" asp-action="ATenantPayment">Payments</a></li>
                    <li><a asp-controller="ATenant" asp-action="ATenantMaintenance">Requests</a></li>
                    <li class="at-dropdown">
                        <a href="#" class="dropbtn" aria-label="Notifications">
                            <i class="fas fa-bell" style="margin-right: 10px; margin-top:4px; text-decoration: none"></i>
                            @* Notifications *@
                        </a>
                    </li>
                    <!-- <li><a href="#">About</a></li> -->
                    <li class="at-dropdown">
                        @* <a href="#" class="at-dropbtn" aria-label="User Profile"> *@
                        @*     <img src="~/images/user-pic.png" alt="logo" style="height: 35px; width: 35px; margin-right: 10px;"> *@
                        @*         @Context.Session.GetString("FirstName")  *@
                        @*         @Context.Session.GetString("LastName") *@
                        @* </a> *@

                        <a href="#" class="at-dropbtn" aria-label="User Profile">
                            @if (Context.Session.GetString("ProfilePicture") != null)
                            {
                                <!-- Display Profile Picture -->
                                <img src="@Url.Content($"~/images/{Context.Session.GetString("ProfilePicture")}")"
                                     alt="Profile Picture"
                                     style="height: 35px; width: 35px; border-radius: 50%; margin-right: 10px;">
                            }
                            else
                            {
                                <!-- Display Initials if No Profile Picture -->
                                <div style="height: 35px; width: 35px; border-radius: 50%;
                                    background-color: #555; display: inline-flex;
                                    align-items: center; justify-content: center;
                                    font-weight: bold; color: #fff; margin-right: 10px;">
                                    @($"{Context.Session.GetString("FirstName")?.Substring(0, 1)}{Context.Session.GetString("LastName")?.Substring(0, 1)}")
                                </div>
                            }

                            <!-- Display User Name -->
                            @* @Context.Session.GetString("FirstName") @Context.Session.GetString("LastName") *@
                        </a>

                        <div class="atdropdown-content">
                            <a asp-controller="ATenant" asp-action="ATenantProfilePage">Profile</a>

                            <a asp-controller="Login" asp-action="Logout">Log Out</a>
                        </div>


                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2025 Cozy Homes. All rights reserved.</p>

        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        document.getElementById('generatePdfButton').addEventListener('click', function () {
            const { jsPDF } = window.jspdf;
            const pdf = new jsPDF();
            const content = document.getElementById('content').innerText;
            pdf.text(content, 10, 10);
            pdf.save('Sample.pdf');
        });
    </script>

    </section>

    <!-- Pay Rent Pop-Up -->
    <div id="pay-rent-popup" class="lease-popup">
        <div class="popup-content">
            <span class="atlease-close" onclick="closePopup('pay-rent-popup')">&times;</span>
            <h2>Pay Rent</h2>
            <p>Please enter your payment details to complete the transaction.</p>
            <form onsubmit="event.preventDefault(); handlePayRent();">
                <label for="amount">Amount:</label>
                <input type="number" id="amount" name="amount" required>

                <label for="payment-method">Payment Method:</label>
                <select id="payment-method" name="payment-method" required>
                    <option value="credit-card">Credit Card</option>
                    <option value="paypal">PayPal</option>
                    <option value="bank-transfer">Bank Transfer</option>
                </select>

                <button type="submit" class="button">Submit Payment</button>
            </form>
        </div>
    </div>

    <!-- Terminate Lease Pop-Up -->
    <div id="terminate-lease-popup" class="lease-popup">
        <div class="popup-content">
            <span class="atlease-close" onclick="closePopup('terminate-lease-popup')">&times;</span>
            <h2>Terminate Lease</h2>
            <p>Please provide a reason for terminating the lease:</p>
            <form onsubmit="event.preventDefault(); handleTerminateLease();">
                <label for="termination-reason">Reason:</label>
                <textarea id="termination-reason" name="termination-reason" rows="4" required></textarea>

                <button type="submit" class="button danger">Submit Request</button>
            </form>
        </div>
    </div>

    <!-- Message Box -->
    <div id="message-box" class="lease-message">
        <div class="lease-msg-content">
            <p id="message-text"></p>
            <button onclick="closeMessageBox()">Close</button>
        </div>
    </div>

    <!-- Logout Confirmation Modal -->
    <div id="logoutModal" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.5);">
        <div style="margin: 20% auto; padding: 20px; background: white; width: 300px; text-align: center;">
            <p>Are you sure you want to logout?</p>
            <button onclick="logoutConfirmed()">Yes</button>
            <button onclick="closeModal()">No</button>
        </div>
    </div>

    <script>

    
 
                  // Logout Confirmation
            function confirmLogout(event) {
                const confirmation = confirm("Are you sure you want to log out?");
                if (!confirmation) {
                    // Prevent the default action if the user cancels
                    event.preventDefault();
                }
                return confirmation;
            }
 
        // Function to open a specific pop-up
        function openPopup(popupId) {
            document.getElementById(popupId).style.display = 'block';
        }

        // Function to close a specific pop-up
        function closePopup(popupId) {
            document.getElementById(popupId).style.display = 'none';
        }


        // Function to display a success message
        function showMessage(message) {
            // Set the message text
            document.getElementById('message-text').textContent = message;

            // Display the message box
            document.getElementById('message-box').style.display = 'block';
        }

        // Function to close the message box
        function closeMessageBox() {
            document.getElementById('message-box').style.display = 'none';
        }

        // Example usage: Call this function after submitting the form
        function handlePayRent() {
            // Simulate a successful payment action
            closePopup('pay-rent-popup'); // Close the Pay Rent popup
            showMessage('You have successfully paid your rent.');
        }

        function handleTerminateLease() {
            // Simulate a successful lease termination action
            closePopup('terminate-lease-popup'); // Close the Terminate Lease popup
            showMessage('Your lease has been successfully terminated.');
        }
    </script>

</body>
</html>
