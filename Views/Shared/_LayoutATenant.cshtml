<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cozy Homes - Lease</title>
    <meta name="theme-color" content="#000000" />
    <!-- Font Awesome CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
    <!-- Add SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.0/dist/sweetalert2.all.min.js"></script>
</head>
<body>
    <!-- Top Header -->
    <div class="top-header">
    </div>

    <!-- Main Header -->
    <header>
        <div class="main-header">
            <!-- Logo -->
            <div class="logo">
                <img src="~/images/cozy-logo.png" alt="Cozy Homes Logo" style="height: 20px; width: 50px;">
                <h1>Cozy Homes</h1>
            </div>

            <!-- Navigation -->
            <nav aria-label="Main navigation">
                <ul>
                    <li><a asp-controller="ATenant" asp-action="ATenantHome" aria-label="Go to Home page">Home</a></li>
                    <li><a asp-controller="ATenant" asp-action="ATenantUnits" aria-label="View available units">Units</a></li>
                    <li><a asp-controller="ATenant" asp-action="ATenantLease" aria-label="View lease details">Lease</a></li>
                    <li><a asp-controller="ATenant" asp-action="ATenantPayment" aria-label="View payment history">Payments</a></li>
                    <li><a asp-controller="ATenant" asp-action="ATenantMaintenance" aria-label="Request maintenance services">Requests</a></li>
                    <li>
                        <a href="#" aria-label="View notifications">
                            <!-- Notification Icon -->
                            <i class="fas fa-bell" style="font-size: 18px; color: #ff4500;" aria-hidden="true"></i>
                        </a>
                    </li>
                    <li class="at-dropdown">
                        <!-- Profile Dropdown -->
                        <a href="#" class="at-dropbtn" aria-haspopup="true" aria-expanded="false" aria-label="User profile">
                            @if (Context.Session.GetString("ProfilePicture") != null)
                            {
                                <!-- Display Profile Picture -->
                                <img src="@Url.Content($"~/images/{Context.Session.GetString("ProfilePicture")}")"
                                     alt="Profile Picture"
                                     style="height: 35px; width: 35px; border-radius: 50%; margin-right: 10px;">
                            }
                            else
                            {
                                <!-- Display Initials if No Profile Picture -->
                                <div style="height: 35px; width: 35px; border-radius: 50%;
                                    background-color: #555; display: inline-flex;
                                    align-items: center; justify-content: center;
                                    font-weight: bold; color: #fff; margin-right: 10px;">
                                    @($"{Context.Session.GetString("FirstName")?.Substring(0, 1)}{Context.Session.GetString("LastName")?.Substring(0, 1)}")
                                </div>
                            }
                        </a>

                        <div class="atdropdown-content" aria-label="Profile options">
                            <a asp-controller="ATenant" asp-action="ATenantProfilePage" aria-label="Go to profile page">Profile</a>
                            <a asp-controller="Login" asp-action="Logout" aria-label="Log out of the account">Log Out</a>
                        </div>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="container" style="min-width: 100vh; min-height: 100vh;">
        <main role="main" class="pb-3" style="min-width: 100vh; min-height: 100vh;">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <p>&copy; 2025 Cozy Homes. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        // Function to open a specific pop-up
        function openPopup(popupId) {
            document.getElementById(popupId).style.display = 'block';
        }

        // Function to close a specific pop-up
        function closePopup(popupId) {
            document.getElementById(popupId).style.display = 'none';
        }

        // Function to display a success message
        function showMessage(message) {
            document.getElementById('message-text').textContent = message;
            document.getElementById('message-box').style.display = 'block';
        }

        // Function to close the message box
        function closeMessageBox() {
            document.getElementById('message-box').style.display = 'none';
        }

        // Example usage: Call this function after submitting the form
        function handlePayRent() {
            closePopup('pay-rent-popup');
            showMessage('You have successfully paid your rent.');
        }

        function handleTerminateLease() {
            closePopup('terminate-lease-popup');
            showMessage('Your lease has been successfully terminated.');
        }
    </script>
</body>
</html>
